{% extends 'base.html.twig' %}

{% block title %}Boardgame index{% endblock %}

{% block main %}
    <h1>Boardgame index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Difficulty</th>
                <th>Year</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for boardgame in boardgames %}
            <tr>
                <td>{{ boardgame.id }}</td>
                <td>{{ boardgame.name }}</td>
                <td>{{ boardgame.difficulty }}</td>
                <td>{{ boardgame.year }}</td>
                <td>
                    <a href="{{ path('app_boardgame_show', {'id': boardgame.id}) }}">show</a>
                    <a href="{{ path('app_boardgame_edit', {'id': boardgame.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_boardgame_new') }}">Create new</a>
{% endblock %}
