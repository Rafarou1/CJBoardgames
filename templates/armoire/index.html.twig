{% extends 'base.html.twig' %}

{% block title %}Armoire index{% endblock %}

{% block main %}
    <h1>Armoire index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Description</th>
                <th>Published</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for armoire in armoires %}
            <tr>
                <td>{{ armoire.id }}</td>
                <td>{{ armoire.description }}</td>
                <td>{{ armoire.published ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_armoire_show', {'id': armoire.id}) }}">show</a>
                    <a href="{{ path('app_armoire_edit', {'id': armoire.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_armoire_new') }}">Create new</a>
{% endblock %}
